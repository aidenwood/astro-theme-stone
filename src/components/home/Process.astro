---
const services = [
  {
    step: '01',
    name: 'Weddings',
    img: '/snacks/wed-icon.svg',
    alt: 'Gold Coast Graphic Design',
    description:
      'Capturing the moments and feelings of the day, for your to cherish forever.',
  },
  {
    step: '02',
    name: 'Commercial',
    img: '/snacks/comm-icon.svg',
    alt: 'Gold Coast Web Design and Web Development',
    description:
      'Promoting products and services in the best light, thinking about your customer.',
  },
  {
    step: '03',
    name: 'Events',
    img: '/snacks/event-icon.svg',
    alt: 'Gold Coast Digital Marketing and Strategy Development',
    description:
      'Showcasing events and the artists of the day. Getting right into the action.',
  },
  {
    step: '04',
    name: 'Portraits',
    img: '/snacks/port-icon.svg',
    alt: 'Gold Coast Digital Marketing and Brand Management',
    description:
      'Photographing people in a comfortable manner that brings out their true personality.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto px-4 sm:px-6 w-full lg:max-w-7xl lg:px-8">
    <div class="">
      <h4 class="text-xl sm:text-2xl font-medium tracking-tight mb-6">Photographing a range of visual snacks.</h4>
      <div class="grid gap-4 grid-cols-1 sm:grid-cols-2">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col rounded-3xl px-6 py-8">
              
              <div class="flex flex-col lg:flex-row gap-4">
                <img
                  class="h-auto w-1/3 sm:w-16 md:w-18 lg:w-28 rounded-3xl"
                  width="640"
                  height="640"
                  src={service.img}
                  alt={service.alt}
                />
                <div class="flex flex-col gap-4">
                  <p class="text-sm">{service.step}</p>
                  <h3 class="text-2xl sm:text-lg lg:text-xl font-medium">{service.name}</h3>
                  <p class="text-primary-950/70 dark:text-primary-200/70 text-base leading-6">
                    {service.description}
                  </p>
                </div>
                
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
